
<?php if ($this->pageCount && ($this->pageCount > 1)): ?>
<div class="text-center">
    <ul class="pagination">
        <!-- First page link -->
        <li<?php echo (isset($this->previous)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url($this->url, array('p' => $this->first)); ?>">&lt;&lt; <?php echo $this->translate('First'); ?></a>
        </li>

        <!-- Previous page link -->
        <li<?php echo (isset($this->previous)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url($this->url, array('p' => $this->previous)); ?>">&lt; <?php echo $this->translate('Previous'); ?></a>
        </li>

        <!-- Numbered page links -->
        <?php foreach ($this->pagesInRange as $page): ?>
        <li<?php echo ($page == $this->current) ? ' class="active"' : ''; ?>>
            <a href="<?php echo $this->url($this->url, array( 'p' => $page)); ?>"><?php echo $page; ?></a>
        </li>
        <?php endforeach; ?>

        <!-- Next page link -->
        <li<?php echo (isset($this->next)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url($this->url, array( 'p' => $this->next)); ?>"><?php echo $this->translate('Next'); ?> &gt;</a>
        </li>

        <!-- Last page link -->
        <li<?php echo (isset($this->next)) ? '' : ' class="disabled"'; ?>>
            <a href="<?php echo $this->url($this->url, array('p' => $this->last)); ?>"><?php echo $this->translate('Last'); ?> &gt;&gt;</a>
        </li>
    </ul>
    <ul class="pager">
        <li class="disabled"><a href="#"><?php echo $this->translate('Number of results : ').$countResults ?> - <?php echo $this->translate('Number of pages : ').$this->pageCount ?></a></li>
    </ul>
</div>
<?php endif; ?>

